<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launchbildschirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/farbverlauf_appdesign_v2"
    tools:context="com.example.adrian.dvsin.Screens.LaunchScreen">

    <LinearLayout
        android:id="@+id/launch_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

        <ImageView
            android:id="@+id/launch_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_gravity="fill"
            android:src="@drawable/logo_dvsin_weiss"
            android:layout_weight="4"
            android:paddingLeft="17dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

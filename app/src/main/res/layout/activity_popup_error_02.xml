<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buchen_screen_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >

    <!-- DESIGNschatten oben -->

    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:elevation="3dp"
        android:background="@drawable/shadow_menuebereiche">

        <LinearLayout
            android:id="@+id/color_topsection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/standard_orange"
            android:layout_weight="1"/>

    </LinearLayout>-->

    <!-- DESIGN gesmat PopUp -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup_error_gesamt"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/shadow_menuebereiche"
        android:elevation="7dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/weiss_hintergrund_screen">

        <ImageView
            android:id="@+id/icon_fehlermeldung"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:paddingTop="19dp"
            android:paddingBottom="14dp"
            android:paddingLeft="35dp"
            android:src="@drawable/icon_dialog_error_weiss"
            android:background="@android:color/transparent"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fehlertext_ueberschift_v1"
                    style="@style/menuetext_gross_grauer_hintergrund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="@string/fehlertext_ueberschift_v1"
                    android:paddingLeft="2dp"
                    />

                <TextView
                    android:id="@+id/fehlertext_erklaerung_v1_1_teil_1"
                    style="@style/menuetext_gross_grauer_hintergrund"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fehlertext_erklaerung_v1_1_teil_1"
                    android:paddingLeft="2dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</LinearLayout>